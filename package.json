{
	"name": "root",
	"private": true,
	"packageManager": "pnpm@9.7.0",
	"engines": {
		"node": ">=18.20.3"
	},
	"scripts": {
		"package:dev": "pnpm --filter package-name dev",
		"playground:dev": "pnpm --filter playground dev",
		"dev": "pnpm --stream -r -parallel dev",
		"changeset": "changeset",
		"release": "node scripts/release.mjs",
		"lint": "biome check .",
		"lint:fix": "biome check --apply ."
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@changesets/cli": "^2.27.7",
		"typescript": "latest"
	},
	"pnpm": {
		"patchedDependencies": {
			"@portaljs/remark-wiki-link@1.2.0": "patches/@portaljs__remark-wiki-link@1.2.0.patch",
			"ts-transformer-keys@0.4.4": "patches/ts-transformer-keys@0.4.4.patch",
			"@d3fc/d3fc-label-layout": "patches/@d3fc__d3fc-label-layout.patch"
		}	
	},
	"workspaces": [
		"package",
		"playground"
	]
}
